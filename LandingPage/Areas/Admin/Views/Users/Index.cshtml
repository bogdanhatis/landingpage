
@{    
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="section-spacing align-users">
    <h2 class="page-title">Index</h2>
  
    <a href="@Url.Action("Register","Account")"> Adauga utilizator </a>

    @Html.ActionLink("Adauga user","Register", "Account")
    
    <link href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />
    <div class="datatable">
        <table id="datatable" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Delete</th>
                </tr>
            </tbody>
        </table>
    </div>
</section>
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js" type="text/javascript"></script>

<script>
    function deleteUser(data) {
        $.ajax({
            url: '@Url.Action("RemoveUser","Users")',
            data: { id: data}
        }).success(function (response) {
            if (response == true) {
                $('#datatable').DataTable().ajax.reload();    
            }
            else { alert("Nu s-a putut sterge userul");}

        })

    }


    function reload() {
        $('#datatable').DataTable({
            ajax: "@Url.Action("GetUsers","Users")",
            columns: [
                { data: "id" },
                { data: "email" },
                {
                    data: "id", render: function (data, type, row, meta) {
                        data = '<input value="Stergere" type="Button" onclick="deleteUser(\'' + data + '\')" />';

                        return data;


                    }
                }
            ]
        });
    }

    $(document).ready(function () {
        reload();
    });
</script>